@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@model List<Mission08_Team0105.Models.Task>

@{
    ViewData["Title"] = "Quadrants";
}

<h1>Quadrants</h1>

<div class="row">
    <!-- Quadrant 1: Important and Urgent -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header text-center">
                <h4>Important & Urgent</h4>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    @foreach (var task in Model.Where(t => t.QuadrantName == "Important/Urgent" && !t.Completed))
                    {
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <span>@task.TaskName</span>
                                <span class="badge badge-info">@task.DueDate</span>
                                <div>
                                    <a href="@Url.Action("Edit", "Home", new { id = task.TaskId })" class="btn btn-primary btn-sm">Update</a>
                                    <form asp-action="CompleteTask" asp-controller="Home" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@task.TaskId" />
                                        <button type="submit" class="btn btn-success btn-sm">Complete</button>
                                    </form>
                                    <a href="@Url.Action("Delete", "Home", new { id = task.TaskId })" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                                </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <!-- Quadrant 2: Not Important and Urgent -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header text-center">
                <h4>Not Important & Urgent</h4>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    @foreach (var task in Model.Where(t => t.QuadrantName == "NotImportant/Urgent" && !t.Completed))
                    {
